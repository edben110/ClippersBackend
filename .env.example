# Clipers Backend - MongoDB Configuration

# Server Configuration
SERVER_PORT=8080

# Spring Profile (dev or prod)
# Use 'dev' for development (allows test endpoints without auth)
# Use 'prod' for production (requires ADMIN role for sensitive endpoints)
SPRING_PROFILE=dev

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/clipers_db
MONGODB_DATABASE=clipers_db

# JWT Configuration
JWT_SECRET=mySecretKey123456789012345678901234567890123456789012345678901234567890
JWT_EXPIRATION=86400000

# File Upload Configuration
MAX_FILE_SIZE=50MB
MAX_REQUEST_SIZE=50MB
FILE_UPLOAD_DIR=./uploads
FILE_UPLOAD_BASE_URL=http://localhost:8080

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000,http://localhost:8080

# API Configuration
API_VERSION=v1
API_BASE_PATH=/api

# Logging Configuration
LOG_LEVEL_CLIPERS=DEBUG
LOG_LEVEL_SECURITY=DEBUG

# Management/Actuator
MANAGEMENT_ENDPOINTS=health,info
HEALTH_SHOW_DETAILS=always

# AI Matching Service Configuration
# URL del servicio de matching con IA (microSelectIA)
# Configura tu propia instancia o usa el servicio proporcionado
AI_MATCHING_SERVICE_URL=https://selector.clipers.pro
AI_MATCHING_SERVICE_ENABLED=true
AI_MATCHING_SERVICE_TIMEOUT=30000

# Video Processing Service Configuration
# URL base del servicio (sin endpoints específicos)
# El servicio concatena /upload-video o /generate-technical-test según necesite
VIDEO_PROCESSING_SERVICE_URL=https://video.clipers.pro
VIDEO_PROCESSING_SERVICE_ENABLED=false

# Production MongoDB Atlas Example (comentado)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/clipers_db?retryWrites=true&w=majority
