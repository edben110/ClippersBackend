# ========================================
# CLIPERS BACKEND - DOCKER LOCAL
# ========================================
# Variables para docker-compose local

# Spring Profile
SPRING_PROFILE=dev

# Server Configuration
SERVER_PORT=8080

# MongoDB Configuration (usando servicio de docker-compose)
MONGODB_URI=mongodb://mongodb:27017/clipers_db
MONGODB_DATABASE=clipers_db

# JWT Configuration
JWT_SECRET=mySecretKey123456789012345678901234567890123456789012345678901234567890
JWT_EXPIRATION=86400000

# File Upload Configuration
MAX_FILE_SIZE=50MB
MAX_REQUEST_SIZE=50MB
FILE_UPLOAD_DIR=/app/uploads
FILE_UPLOAD_BASE_URL=http://localhost:8080

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000

# AI Matching Service Configuration
AI_MATCHING_SERVICE_URL=https://selector.clipers.pro
AI_MATCHING_SERVICE_ENABLED=true
AI_MATCHING_SERVICE_TIMEOUT=30000

# Video Processing Service Configuration
VIDEO_PROCESSING_SERVICE_URL=https://video.clipers.pro/upload-video
VIDEO_PROCESSING_SERVICE_ENABLED=true

# Logging Configuration
LOG_LEVEL_CLIPERS=DEBUG
LOG_LEVEL_SECURITY=DEBUG

# Management/Actuator
MANAGEMENT_ENDPOINTS=health,info
HEALTH_SHOW_DETAILS=always
