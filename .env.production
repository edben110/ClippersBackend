# ========================================
# CLIPERS BACKEND - PRODUCTION ENVIRONMENT
# ========================================
# Configure estas variables en Coolify

# Server Configuration
SERVER_PORT=8080

# Spring Profile - IMPORTANTE: usar 'prod' en producción
SPRING_PROFILE=prod

# MongoDB Configuration
# IMPORTANTE: Reemplaza con tu MongoDB Atlas URI o servicio MongoDB en Coolify
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/clipers_db?retryWrites=true&w=majority
MONGODB_DATABASE=clipers_db

# JWT Configuration
# IMPORTANTE: Genera un secret seguro: openssl rand -base64 64
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_AT_LEAST_64_CHARACTERS_LONG
JWT_EXPIRATION=86400000

# File Upload Configuration
MAX_FILE_SIZE=50MB
MAX_REQUEST_SIZE=50MB
FILE_UPLOAD_DIR=/app/uploads
FILE_UPLOAD_BASE_URL=https://your-backend-domain.com

# Frontend Configuration
# IMPORTANTE: Reemplaza con tu dominio de frontend en Coolify
FRONTEND_URL=https://your-frontend-domain.com
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com

# API Configuration
API_VERSION=v1
API_BASE_PATH=/api

# Logging Configuration - Producción
LOG_LEVEL_CLIPERS=INFO
LOG_LEVEL_SECURITY=WARN

# Management/Actuator
MANAGEMENT_ENDPOINTS=health,info
HEALTH_SHOW_DETAILS=when-authorized

# AI Matching Service Configuration
# IMPORTANTE: Configura la URL de tu servicio de IA
# Si no tienes uno propio, contacta al equipo para obtener acceso
AI_MATCHING_SERVICE_URL=https://selector.clipers.pro
AI_MATCHING_SERVICE_ENABLED=true
AI_MATCHING_SERVICE_TIMEOUT=30000

# Video Processing Service Configuration
# IMPORTANTE: Configura la URL de tu servicio de procesamiento de videos
# Si no tienes uno propio, contacta al equipo para obtener acceso
VIDEO_PROCESSING_SERVICE_URL=https://video.clipers.pro
VIDEO_PROCESSING_SERVICE_ENABLED=true

# ========================================
# INSTRUCCIONES PARA COOLIFY:
# ========================================
# 1. Crea un servicio MongoDB en Coolify o usa MongoDB Atlas
# 2. Genera un JWT_SECRET seguro
# 3. Configura FRONTEND_URL con tu dominio de frontend
# 4. Configura FILE_UPLOAD_BASE_URL con tu dominio de backend
# 5. Actualiza CORS_ALLOWED_ORIGINS con tu dominio de frontend
# 6. Asegúrate de que SPRING_PROFILE=prod
